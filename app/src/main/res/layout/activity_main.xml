<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/clTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.MainActivity">

        <androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/transition_scene">



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBubble"
                android:layout_width="@dimen/onboarding_bubble_size_step_one"
                android:layout_height="@dimen/onboarding_bubble_size_step_one"
                android:background="@drawable/bubble_background"
                android:backgroundTint="@color/bubbleCollapseColor"
                app:layout_constraintCircle="@+id/centerImage"
                app:layout_constraintCircleAngle="20"
                app:layout_constraintCircleRadius="@dimen/_320sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/centerImage"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSpec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintEnd_toStartOf="@+id/clController"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSpec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/device_spec"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRedDot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="@id/ivSpec"
                    app:layout_constraintEnd_toEndOf="@id/ivSpec"
                    app:layout_constraintStart_toStartOf="@id/ivSpec"
                    app:srcCompat="@drawable/red_dot" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clController"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivController"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/device_controller"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBlueDot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="@id/ivController"
                    app:layout_constraintEnd_toEndOf="@id/ivController"
                    app:layout_constraintStart_toStartOf="@id/ivController"
                    app:srcCompat="@drawable/blue_dot" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clDevices"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/clController"
                tools:layout_editor_absoluteX="13dp">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAddDevice"
                    style="@style/jioTypeBlueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_add_device"
                    app:layout_constraintEnd_toStartOf="@+id/tvJioGlass"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvJioGlass"
                    style="@style/jioTypeBlueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_jio_glass"
                    app:layout_constraintEnd_toStartOf="@+id/tvController"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvAddDevice"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvController"
                    style="@style/jioTypeBlueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_controller"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvJioGlass"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="@+id/tvAddDevice"
                    app:layout_constraintStart_toStartOf="@+id/tvAddDevice"
                    app:layout_constraintTop_toBottomOf="@id/tvAddDevice"
                    app:srcCompat="@drawable/add_device" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivJioGlass"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="@+id/tvJioGlass"
                    app:layout_constraintStart_toStartOf="@+id/tvJioGlass"
                    app:layout_constraintTop_toBottomOf="@id/tvJioGlass"
                    app:srcCompat="@drawable/jio_glass" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/ivControllerBig"
                    app:layout_constraintEnd_toEndOf="@+id/tvController"
                    app:layout_constraintStart_toStartOf="@+id/tvController"
                    app:layout_constraintTop_toBottomOf="@id/tvController"
                    app:srcCompat="@drawable/controller_big" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/battery"
                    app:layout_constraintCircleRadius="@dimen/_35sdp"
                    app:layout_constraintCircleAngle="360"
                    app:layout_constraintCircle="@+id/ivControllerBig"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/connected"
                    android:id="@+id/ivConnected"
                    app:layout_constraintCircleRadius="@dimen/_40sdp"
                    app:layout_constraintCircleAngle="180"
                    app:layout_constraintCircle="@+id/ivControllerBig"
                    android:layout_height="wrap_content"/>



                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/jioTypeLightBlueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_connected"
                    app:layout_constraintEnd_toEndOf="@+id/ivControllerBig"
                    app:layout_constraintStart_toStartOf="@+id/ivControllerBig"
                    app:layout_constraintTop_toBottomOf="@+id/ivConnected" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/connecting"
                    android:id="@+id/ivConnecting"
                    app:layout_constraintCircleRadius="@dimen/_40sdp"
                    app:layout_constraintCircleAngle="180"
                    app:layout_constraintCircle="@+id/ivJioGlass"
                    android:layout_height="wrap_content"/>



                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/jioTypeLightBlueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_connecting"
                    app:layout_constraintEnd_toEndOf="@+id/ivJioGlass"
                    app:layout_constraintStart_toStartOf="@+id/ivJioGlass"
                    app:layout_constraintTop_toBottomOf="@+id/ivConnecting" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDeviceStatus"
                style="@style/jioTypeBlueText"
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_device_status"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/clController"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/clController" />

        </androidx.constraintlayout.motion.widget.MotionLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDeviceStatusAssets"
            style="@style/jioTypeGreyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:text="@string/lbl_device_status_assets"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />







    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>