<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HintTextStyle">
        <item name="android:textColorHint">@color/login_input_grey</item>
        <item name="android:colorControlNormal">@color/login_input_grey</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="colorAccent">@color/login_input_grey</item>
    </style>

    <style name="EditTextBottomLineStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="colorAccent">@color/title_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">@dimen/dimen_12</item>
        <item name="android:paddingTop">@dimen/dimen_5</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>




</resources>